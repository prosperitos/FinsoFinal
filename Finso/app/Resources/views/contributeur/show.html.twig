{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contributeur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contributeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contributeur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ contributeur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contributeur.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ contributeur.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ contributeur.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contributeur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contributeur_edit', { 'id': contributeur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
